<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.t_teng.e_bus.MainActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
        tools:context="com.example.mapstyles.MapsActivityString"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/fragment_map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/R_line"
        android:layout_toLeftOf="@+id/R_line"
        android:layout_toStartOf="@+id/R_line"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="50dp" />

    <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageButton
        android:id="@+id/R_line"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/redline_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageButton
        android:id="@+id/Y_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/yellowline_sign"
        android:layout_above="@+id/R_line"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/R_line"
        android:layout_alignStart="@+id/R_line" />

